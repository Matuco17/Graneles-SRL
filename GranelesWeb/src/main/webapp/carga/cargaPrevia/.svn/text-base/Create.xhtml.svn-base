<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.prime.com.tr/ui">

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundleCarga.CreateCargaPreviaTitle}"></h:outputText>
        </ui:define>
        <ui:define name="body">
            <h:form>
                <h:panelGrid columns="4">
                    <h:outputLabel value="#{bundleCarga.CargaPreviaTitle_id}" for="id" style="font-weight: bold;" />
                    <p:inputText id="id" value="#{cargaPreviaController.selected.id}" />
                    <h:outputLabel value="#{bundleCarga.CargaPreviaTitle_carga}" for="carga" style="font-weight: bold;" />
                    <p:inputText id="carga" value="#{cargaPreviaController.selected.carga}" />
                    <h:outputLabel value="#{bundleCarga.CargaPreviaTitle_mercaderia}" for="mercaderia" style="font-weight: bold;" />
                    <p:selectOneMenu id="mercaderia" value="#{cargaPreviaController.selected.mercaderia}" title="#{bundleCarga.CargaPreviaTitle_mercaderia}" required="true" requiredMessage="#{bundleCarga.CargaPreviaRequiredMessage_mercaderia}" style="width:100%;">
                        <f:selectItems value="#{mercaderiaController.itemsAvailableSelectOne}"/>
                    </p:selectOneMenu>
                    <h:outputLabel value="#{bundleCarga.CargaPreviaTitle_bodega}" for="bodega" style="font-weight: bold;" />
                    <p:selectOneMenu id="bodega" value="#{cargaPreviaController.selected.bodega}" title="#{bundleCarga.CargaPreviaTitle_bodega}" required="true" requiredMessage="#{bundleCarga.CargaPreviaRequiredMessage_bodega}" style="width:100%;">
                        <f:selectItems value="#{bodegaController.itemsAvailableSelectOne}"/>
                    </p:selectOneMenu>
                    <h:outputLabel value="#{bundleCarga.CargaPreviaTitle_embarque}" for="embarque" style="font-weight: bold;" />
                    <p:selectOneMenu id="embarque" value="#{cargaPreviaController.selected.embarque}" title="#{bundleCarga.CargaPreviaTitle_embarque}" required="true" requiredMessage="#{bundleCarga.CargaPreviaRequiredMessage_embarque}" style="width:100%;">
                        <f:selectItems value="#{embarqueController.itemsAvailableSelectOne}"/>
                    </p:selectOneMenu>
                </h:panelGrid>
                <h:panelGrid columns="2">
                    <h:commandButton action="#{cargaPreviaController.create}"
                                     image="/faces/resources/images/save.png" 
                                     value="#{bundleCarga.CargaPreviaSaveLink}" 
                                     title="#{bundleCarga.CargaPreviaSaveLink}"
                                     />

                    <h:commandButton action="#{cargaPreviaController.prepareList}"
                                     image="/faces/resources/images/viewAll.png" 
                                     value="#{bundleCarga.CargaPreviaShowAllLink}"
                                     title="#{bundleCarga.CargaPreviaShowAllLink}"
                                     immediate="true" 
                                     />

                </h:panelGrid>
            </h:form>
        </ui:define>
    </ui:composition>

</html>
