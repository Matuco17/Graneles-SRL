<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.prime.com.tr/ui">

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundleCarga.EditTurnoEmbarqueTitle}"></h:outputText>
        </ui:define>
        <ui:define name="body">
            <h:form>
                <h:panelGrid columns="4">
                    <h:outputLabel value="#{bundleCarga.TurnoEmbarqueTitle_id}" for="id" style="font-weight: bold;" />
                    <p:inputText id="id" value="#{turnoEmbarqueController.selected.id}" title="#{bundleCarga.TurnoEmbarqueTitle_id}" />
                    <h:outputLabel value="#{bundleCarga.TurnoEmbarqueTitle_fecha}" for="fecha" style="font-weight: bold;" />
                    <p:calendar id="fecha" value="#{turnoEmbarqueController.selected.fecha}" title="#{bundleCarga.TurnoEmbarqueTitle_fecha}"  showOn="button">
                        <f:convertDateTime pattern="MM/dd/yyyy" />
                    </p:calendar>
                    <h:outputLabel value="#{bundleCarga.TurnoEmbarqueTitle_turno}" for="turno" style="font-weight: bold;" />
                    <p:inputText id="turno" value="#{turnoEmbarqueController.selected.turno}" title="#{bundleCarga.TurnoEmbarqueTitle_turno}" />
                    <h:outputLabel value="#{bundleCarga.TurnoEmbarqueTitle_tipo}" for="tipo" style="font-weight: bold;" />
                    <p:inputText id="tipo" value="#{turnoEmbarqueController.selected.tipo}" title="#{bundleCarga.TurnoEmbarqueTitle_tipo}" />
                    <h:outputLabel value="#{bundleCarga.TurnoEmbarqueTitle_fixedListid}" for="fixedListid" style="font-weight: bold;" />
                    <p:selectOneMenu id="fixedListid" value="#{turnoEmbarqueController.selected.fixedListid}"  required="true" requiredMessage="#{bundleCarga.TurnoEmbarqueRequiredMessage_fixedListid}" style="width:100%;">
                        <f:selectItems value="#{fixedListController.itemsAvailableSelectOne}"/>
                    </p:selectOneMenu>
                    <h:outputLabel value="#{bundleCarga.TurnoEmbarqueTitle_embarque}" for="embarque" style="font-weight: bold;" />
                    <p:selectOneMenu id="embarque" value="#{turnoEmbarqueController.selected.embarque}"  required="true" requiredMessage="#{bundleCarga.TurnoEmbarqueRequiredMessage_embarque}" style="width:100%;">
                        <f:selectItems value="#{embarqueController.itemsAvailableSelectOne}"/>
                    </p:selectOneMenu>
                </h:panelGrid>
                <h:panelGrid columns="3">

                    <h:commandButton action="#{turnoEmbarqueController.update}" 
                                     image="/faces/resources/images/save.png" 
                                     value="#{bundleCarga.TurnoEmbarqueSaveLink}"
                                     title="#{bundleCarga.TurnoEmbarqueSaveLink}"
                                     />
                    <h:commandButton action="View" 
                                     value="#{bundleCarga.TurnoEmbarqueViewLink}" 
                                     image="/faces//resources/images/view.png" 
                                     immediate="true"
                                     title="#{bundleCarga.TurnoEmbarqueViewLink}"
                                     />
                    <h:commandButton action="#{turnoEmbarqueController.prepareList}"
                                     image="/faces/resources/images/viewAll.png" 
                                     value="#{bundleCarga.TurnoEmbarqueShowAllLink}"
                                     immediate="true"
                                     title="#{bundleCarga.TurnoEmbarqueShowAllLink}"
                                     />
                </h:panelGrid>                 
            </h:form>
