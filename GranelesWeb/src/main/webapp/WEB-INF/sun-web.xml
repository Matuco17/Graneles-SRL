<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sun-web-app PUBLIC "-//Sun Microsystems, Inc.//DTD GlassFish Application Server 3.0 Servlet 3.0//EN" "http://www.sun.com/software/appserver/dtds/sun-web-app_3_0-0.dtd">
<sun-web-app error-url="">
  
  <context-root>/GranelesWeb</context-root>
  
  <!--Configuraciones de Grupos y Roles para seguridad -->
  <security-role-mapping>
    <role-name>ADMINISTRADOR</role-name>
    <group-name>ADM</group-name>
  </security-role-mapping>
  <security-role-mapping>
    <role-name>USUARIO</role-name>
    <group-name>USR</group-name>
    <group-name>GTE</group-name>
    <group-name>ADM</group-name>
  </security-role-mapping>
  <security-role-mapping>
    <role-name>GERENTE</role-name>
    <group-name>GTE</group-name>
    <group-name>ADM</group-name>
 </security-role-mapping>

  <class-loader delegate="true"/>
  <jsp-config>
    <property name="keepgenerated" value="true">
      <description>Keep a copy of the generated servlet class' java code.</description>
    </property>
  </jsp-config>
  <system-properties>
    <propertie name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
  </system-properties>
</sun-web-app>
