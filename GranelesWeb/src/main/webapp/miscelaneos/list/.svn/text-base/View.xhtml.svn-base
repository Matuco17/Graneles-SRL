<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.prime.com.tr/ui">

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundle.ViewListTitle}"></h:outputText>
        </ui:define>
        <ui:define name="body">
            <h:form>
                <h:panelGrid columns="4">
                    <h:outputText value="#{bundle.ListTitle_id}" style="font-weight: bold;"/>
                    <h:outputText value="#{listController.selected.id}" title="#{bundle.ListTitle_id}"/>
                    <h:outputText value="#{bundle.ListTitle_descripcion}" style="font-weight: bold;"/>
                    <h:outputText value="#{listController.selected.descripcion}" title="#{bundle.ListTitle_descripcion}"/>
                    <h:outputText value="#{bundle.ListTitle_configurable}" style="font-weight: bold;"/>
                    <h:outputText value="#{listController.selected.configurable}" title="#{bundle.ListTitle_configurable}"/>
                </h:panelGrid>


                <h:panelGrid columns="4">
                    <h:commandButton action="#{listController.destroyAndView}" 
                                     image="/faces/resources/images/destroy.png" 
                                     value="#{bundle.ListDestroyLink}"
                                     title="#{bundle.ListDestroyLink}"
                                     onclick="return confirm('Â¿Esta seguro que desea eliminar este List?');" 
                                     />

                    <h:commandButton action="Edit" 
                                     image="/faces/resources/images/edit.png" 
                                     value="#{bundle.ListEditLink}"
                                     title="#{bundle.ListEditLink}"
                                     />
                    <h:commandButton action="#{listController.prepareCreate}" 
                                     image="/faces/resources/images/new.png" 
                                     value="#{bundle.ListCreateLink}"
                                     title="#{bundle.ListCreateLink}"
                                     />
                    <h:commandButton action="#{listController.prepareList}"
                                     image="/faces/resources/images/viewAll.png" 
                                     value="#{bundle.ListShowAllLink}"
                                     title="#{bundle.ListShowAllLink}"
                                     />
                </h:panelGrid>
            </h:form>
        </ui:define>
    </ui:composition>

</html>
