<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.prime.com.tr/ui">

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundlePersonal.CreateAccidentadoTitle}"></h:outputText>
        </ui:define>
        <ui:define name="body">
            <h:form>
                <h:panelGrid columns="4">
                    <h:outputLabel value="#{bundlePersonal.AccidentadoTitle_personal}" for="personal" style="font-weight: bold;" />
                    <h:selectOneMenu id="personal" value="#{accidentadoController.selected.personal}"  required="true" requiredMessage="#{bundlePersonal.AccidentadoRequiredMessage_personal}">
                        <f:selectItems value="#{personalController.itemsAvailableSelectOne}"/>
                    </h:selectOneMenu>
                    <h:outputLabel value="" />
                    <h:outputLabel value="" />
                    <h:outputLabel value="#{bundlePersonal.AccidentadoTitle_tarea}" for="tarea" style="font-weight: bold;" />
                    <h:selectOneMenu id="tarea" value="#{accidentadoController.selected.tarea}" required="true" requiredMessage="#{bundlePersonal.AccidentadoRequiredMessage_tarea}">
                        <f:selectItems value="#{tareaController.itemsAvailableSelectOne}"/>
                    </h:selectOneMenu>
                    <h:outputLabel value="#{bundlePersonal.AccidentadoTitle_categoria}" for="categoria" style="font-weight: bold;" />
                    <h:selectOneMenu id="categoria" value="#{accidentadoController.selected.categoria}" required="true" requiredMessage="#{bundlePersonal.AccidentadoRequiredMessage_categoria}">
                        <f:selectItems value="#{categoriaController.itemsAvailableSelectOne}"/>
                    </h:selectOneMenu>
                    <h:outputLabel value="#{bundlePersonal.AccidentadoTitle_desde}" for="desde" style="font-weight: bold;" />
                    <p:calendar id="desde" value="#{accidentadoController.selected.desde}" title="#{bundlePersonal.AccidentadoTitle_desde}" pattern="dd/MM/yyyy" />
                    <h:outputLabel value="#{bundlePersonal.AccidentadoTitle_hasta}" for="hasta" style="font-weight: bold;" />
                    <p:calendar id="hasta" value="#{accidentadoController.selected.hasta}" title="#{bundlePersonal.AccidentadoTitle_hasta}" pattern="dd/MM/yyyy" />
                    <h:outputLabel value="#{bundlePersonal.AccidentadoTitle_bruto}" for="bruto" style="font-weight: bold;" />
                    <p:inputText id="bruto" value="#{accidentadoController.selected.bruto}" />
                </h:panelGrid>
                <h:panelGrid columns="2" >
                    <h:outputLabel value="#{bundlePersonal.AccidentadoTitle_descripcionCortaAccidente}" for="descripcionCortaAccidente" style="font-weight: bold;" />
                    <p:inputTextarea id="descripcionCortaAccidente" value="#{accidentadoController.selected.descripcionCortaAccidente}" style="width: 400px; height: 120px;" />
                </h:panelGrid>
                <h:panelGrid columns="2">
                    <h:commandButton action="#{accidentadoController.create}"
                                     image="/faces/resources/images/save.png" 
                                     value="#{bundlePersonal.AccidentadoSaveLink}" 
                                     title="#{bundlePersonal.AccidentadoSaveLink}"
                                     />

                    <h:commandButton action="#{accidentadoController.prepareList}"
                                     image="/faces/resources/images/viewAll.png" 
                                     value="#{bundlePersonal.AccidentadoShowAllLink}"
                                     title="#{bundlePersonal.AccidentadoShowAllLink}"
                                     immediate="true" 
                                     />

                </h:panelGrid>
            </h:form>
        </ui:define>
    </ui:composition>

</html>
